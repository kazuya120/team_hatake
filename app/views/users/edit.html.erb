<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
      <%= render 'layouts/errors', obj: @user %>
      <div class="form-group">
        <%= f.label :名前 %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :プロフィール画像 %>
        <%= f.attachment_field :profile_image, class: "form-control-fie user_image" %>
      </div>

      <div class="form-group">
        <%= f.submit "アップデートします", class: 'btn btn-secondary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>