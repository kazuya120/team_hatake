<div class="card-list-container py-5">
  <% blogs.each do |blog| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to blog_path(blog.id) do %>
    <%= attachment_image_tag blog, :image, size: "180×130", class:"card-img-top"; %>
    
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= attachment_image_tag(blog.user, :profile_image, :fill, 60, 60, fallback: "no-image-icon.jpg") %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <strong><i class="far fa-flag"></i><span><%= link_to blog.title, blog_path(blog), class: "blog_#{blog.id}" %></span></strong>
            <% end %>
          </p>
          <p class="card-text">本文：<%= blog.body %></p>
          <span><i class="fas fa-user"><%= blog.user.name %> | </i></span>
          <span>コメント数：<%= blog.blog_comments.count %></span>
          <p id="favorites_btn_<%= blog.id %>">
            <%= render 'favorites/favorite-btn', blog: blog %>
          </p>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
