<% blogs.each do |blog| %>
<tr>
  <td>
    <%= link_to blog_path(blog) do %>
    <%= attachment_image_tag blog, :image, :fill, 50, 50, fallback: "no-image-icon.jpg" %>
    <% end %>
    </td>
    <td><%= link_to blog.title, blog_path(blog), class: "blog_#{blog.id}" %></td>
    <td>コメント数：<%= blog.blog_comments.count %></td>
</tr>
<% end %>