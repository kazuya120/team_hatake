
<div class="base-container mw-xl">
  <div class="texts-wrapper">
    <div class="contents-title text-center">
      <h3>ブログ(全<%= @total_blogs.count %>件)</h3>
      <div class="card-list-container">
      <% @blogs.each do |blog| %>
       <div class="card w-50 mx-auto mt-4 shadow-lg">
        <%= link_to blog_path(blog.id) do %>
        <%= attachment_image_tag blog, :image, size: "160×100", class:"card-img-top"; %>
    
         <div class="card-body">
      
           <div class="col-6">
          <%= attachment_image_tag(blog.user, :profile_image, :fill, 60, 60, fallback: "no-image-icon.jpg") %>
           </div>
            <div class="col-12">
            <p class="card-title">
            <strong><span>タイトル：<%= link_to blog.title, blog_path(blog), class: "blog_#{blog.id}" %></span></strong>
            <% end %>
          </p>
          <span><i class="fas fa-user"><%= blog.user.name %> | </i></span>
          <span>コメ数：<%= blog.blog_comments.count %></span>
          <p id="favorites_btn_<%= blog.id %>">
            <%= render 'favorites/favorite-btn', blog: blog %>
          </p>
        </div>
      
    </div>
  </div>
</div>
<% end %>



      
   