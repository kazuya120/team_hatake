<% if blog.favorited_by?(current_user) %>
<%= link_to blog.favorites.count, blog_favorites_path(blog.id), method: :delete, remote: true,class: "fas fa-heart heart_red" %>
<% else %>
<%= link_to blog.favorites.count, blog_favorites_path(blog.id), method: :post, remote: true,class: "fas fa-heart heart_blue" %>
<% end %>